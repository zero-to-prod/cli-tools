#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

require getcwd().'/vendor/autoload.php';

$Application = (new Application());
$Application->add(new Zerotoprod\CliTools\SrcCommand());

$Application->add(new Zerotoprod\OmdbApiCli\ByIdOrTitleCommand());
$Application->add(new Zerotoprod\OmdbApiCli\SearchCommand());
$Application->add(new Zerotoprod\OmdbApiCli\PosterCommand());
$Application->add(new Zerotoprod\OmdbApiCli\SrcCommand());

$Application->add(new Zerotoprod\ValidateEmailCli\SrcCommand());
$Application->add(new Zerotoprod\ValidateEmailCli\ValidateCommand());

$Application->run();